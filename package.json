{
	"name": "tiny-tms",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "pnpm run setup:db && vite dev",
		"dev:e2e": "cross-env-shell DATABASE_LOCATION=dbe2e.sqlite \"pnpm run setup:db && vite dev\"",
		"build": "vite build",
		"preview": "pnpm run setup:db && vite preview",
		"sync:svelte": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . && eslint --fix .",
		"---- Test ----------------------------------------------------------": "",
		"test": "pnpm test:unit && pnpm test:integration",
		"test:unit": "vitest run --project unit",
		"test:integration": "cross-env DATABASE_LOCATION=:memory: vitest run --project integration",
		"test:e2e": "pnpm run build && playwright test",
		"test:e2e:only": "playwright test",
		"test:e2e:local": "cross-env DATABASE_LOCATION=dbe2e.sqlite playwright test --headed --ui --config ./playwright.config.local.ts",
		"---- DB ------------------------------------------------------------": "",
		"setup:db": "pnpm migrate:latest && pnpm sync:db",
		"migrate": "tsx ./services/src/kysely/migrator.ts",
		"migrate:latest": "pnpm run migrate -- latest",
		"migrate:up": "pnpm run migrate -- up",
		"migrate:down": "pnpm run migrate -- down",
		"migrate:reset": "pnpm run migrate -- reset",
		"sync:db": "cross-env DATABASE_URL=db.sqlite kysely-codegen",
		"---- DOCS ----------------------------------------------------------": "",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs --port 8080",
		"---- MISC ----------------------------------------------------------": "",
		"prepare": "husky || true"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^11.0.0",
		"bits-ui": "^0.21.7",
		"clsx": "^2.1.1",
		"date-fns": "^3.6.0",
		"formsnap": "^1.0.0",
		"jsonwebtoken": "^9.0.2",
		"kysely": "^0.27.3",
		"lucide-svelte": "^0.399.0",
		"minimist": "^1.2.8",
		"mode-watcher": "^0.3.0",
		"pino": "^9.0.0",
		"pino-pretty": "^11.0.0",
		"svelte-sonner": "^0.3.24",
		"sveltekit-superforms": "^2.13.0",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"typesafe-utils": "^1.16.2",
		"zod": "^3.23.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.2.0",
		"@estruyf/github-actions-reporter": "^1.7.0",
		"@playwright/test": "^1.44.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.10",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/minimist": "^1.2.5",
		"@types/node": "^20.12.7",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"autoprefixer": "^10.4.19",
		"cross-env": "^7.0.3",
		"eslint": "^9.2.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-svelte": "^2.37.0",
		"globals": "^15.2.0",
		"husky": "^9.0.11",
		"jsdom": "^24.0.0",
		"kysely-codegen": "^0.15.0",
		"lint-staged": "^15.2.2",
		"postcss": "^8.4.32",
		"postcss-load-config": "^6.0.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.6.0",
		"svelte": "^4.2.15",
		"svelte-check": "^3.7.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.6.2",
		"tsx": "^4.7.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.8.0",
		"vite": "^5.2.11",
		"vitepress": "^1.2.3",
		"vitest": "^1.5.3"
	},
	"type": "module",
	"packageManager": "pnpm@9.4.0",
	"volta": {
		"node": "20.15.0",
		"pnpm": "9.4.0"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"workspaces": [
		"services"
	]
}
